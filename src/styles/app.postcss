@import './colors.postcss';
@import './typography.postcss';

:root {
	width: 100%;
	height: 100%;
	background-color: color(base300);
	padding: 0;
	margin: 0;
}

body {
	color: color(contrast500);
	font-size: var(--md);
	font-family: font(main);
	font-weight: 400;
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
	overflow-x: hidden;
}

* {
	text-rendering: optimizeLegibility;
	box-sizing: border-box;
}