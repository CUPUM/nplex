:root {
	width: 100vw;
	height: 100vh;
	padding: 0;
	margin: 0;
	font-family: var(--font-main);
	color: var(--color-dark-900);
	font-size: var(--size-md);
	font-weight: 400;
	overflow: hidden;
	transition: background-color 1s ease-in-out;
}

body {
	position: relative;
	display: block;
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
	overflow-x: hidden;
	overflow-y: auto;
	@supports (overflow: overlay) {
		overflow-y: overlay;
	}
}

*,
*::before,
*::after {
	/* -webkit-font-smoothing: antialiased; */
	box-sizing: border-box;
}

/*
	Main styles
*/
h1 {
	font-weight: 450;
	font-size: var(--size-x4large);
	padding: 0;
	margin: 1rem 0 2rem 0;
	color: var(--color-dark-900);
}

h2 {
	font-weight: 500;
	font-size: var(--size-x3large);
	padding: 0;
	margin: 1rem 0 2rem 0;
	color: var(--color-dark-900);
}

h3 {
	font-weight: 550;
	font-size: var(--size-x2large);
	padding: 0;
	margin: 1rem 0 2rem 0;
	color: var(--color-dark-900);
}

h4 {
	font-weight: 600;
	font-size: var(--size-xlarge);
	padding: 0;
	margin: 1rem 0 2rem 0;
	color: var(--color-dark-900);
}

h5 {
	font-weight: 600;
	font-size: var(--size-large);
	padding: 0;
	margin: 1rem 0 2rem 0;
	color: var(--color-dark-900);
}

/*
	Vendor stylings reset
*/

input[type='search']::-ms-clear {
	display: none;
	width: 0;
	height: 0;
}
input[type='search']::-ms-reveal {
	display: none;
	width: 0;
	height: 0;
}
input[type='search']::-webkit-search-decoration,
input[type='search']::-webkit-search-cancel-button,
input[type='search']::-webkit-search-results-button,
input[type='search']::-webkit-search-results-decoration {
	display: none;
}

/*
	Scrollbar styling
*/

:root {
	--scroll-size: 5px;
}

* {
	--scroll-color: rgba(var(--rgb-dark-500), 0);
}

*:hover {
	--scroll-color: rgba(var(--rgb-dark-500), 0.5);
}

::-webkit-scrollbar {
	width: var(--scroll-size);
	height: var(--scroll-size);
}

::-webkit-scrollbar-track {
	background: transparent;
	box-shadow: none;
}

::-webkit-scrollbar-thumb {
	position: relative;
	background: var(--scroll-color);
	border-radius: var(--scroll-size);
}
