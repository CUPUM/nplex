{
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "svelte.svelte-vscode",
	/**
	 * Where svelte-language plugin should look for css globals needed for intellisens.
	 */
	"svelte.plugin.css.globals": "src/styles/*.css, src/styles/*.postcss, src/styles/*/**.css, src/styles/*/**.postcss",
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	}
}
