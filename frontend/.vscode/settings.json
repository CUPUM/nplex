{
	"workbench.editor.labelFormat": "short",
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
	"editor.detectIndentation": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"files.associations": { "*.svx": "markdown" },
	"editor.codeActionsOnSave": {
		"source.organizeImports": true,
		"source.fixAll": true
	},
	/**
	 * Where svelte-language plugin should look for css globals needed for intellisens.
	 */
	"svelte.plugin.css.globals": "src/styles/*.css,src/styles/*.scss",
	"svelte.plugin.svelte.useNewTransformation": true,
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	}
}
