{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"paths": {
			"$actions/*": ["src/actions/*"],
			"$components/*": ["src/components/*"],
			"$stores/*": ["src/stores/*"],
			"$styles/*": ["src/styles/*"],
			"$routes/*": ["src/routes/*"],
			"$transitions/*": ["src/transitions/*"],
			"$utils/*": ["src/utils/*"],
			"$apitypes/*": [".svelte-kit/types/src/routes/api/*"]
		},
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"scripts/*.ts"
	]
}
